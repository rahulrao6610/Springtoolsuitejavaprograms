
public class Pattern6 {
//1 2 3 4
// 2 3 4
//  3 4
//	 4
//	3 4
// 2 3 4
//1 2 3 4	
	public static void main(String[] args) {
		        int n = 4; // The highest number in the pattern
		        
		        // First part of the pattern (decreasing)
		        for (int i = 0; i < n; i++) {
		            for (int j = i + 1; j <= n; j++) {
		                System.out.print(j + " ");
		            }
		            System.out.println(); 
		        }
		        for (int i = n - 1; i >= 0; i--) {
		            for (int j = i + 1; j <= n; j++) {
		                System.out.print(j + " ");
		            }
		            System.out.println(); // Move to the next line
		        }
		    }
		}
