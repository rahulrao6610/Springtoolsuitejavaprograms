
public class Pattern6 {
//1 2 3 4
// 2 3 4
//  3 4
//	 4
//	3 4
// 2 3 4
//1 2 3 4	
	public static void main(String[] args) {
		int max=4;
		for(int r=1;r<=4;r++) {
			for(int i=0;i<=max;i++) {
				System.out.print(" ");
				
			}
			for(int c=1;c<=r;c++) {
				System.out.print(r+" ");
				
			}
			System.out.println();
		}
		max=max-2;
	}

}
