
public class Pattren5 {

	public static void main(String[] args) {
		    
		        for (int r = 1; r <= 4; r++) {
		            for (int c = 0; c < r; c++) {
		       
		                System.out.print(c % 2);
		                System.out.print(" ");
		            }
		            System.out.println();
		        }
		    }


	}
