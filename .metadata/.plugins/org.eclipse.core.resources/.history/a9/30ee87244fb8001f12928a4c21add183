
public class Pattren5 {

	public static void main(String[] args) {
		        int n = 4;  
		        for (int r = 1; r <= n; r++) {
		            for (int c = 0; c < r; c++) {
		       
		                System.out.print(c % 2);
		                System.out.print("\t");
		            }
		            System.out.println();
		        }
		    }


	}
