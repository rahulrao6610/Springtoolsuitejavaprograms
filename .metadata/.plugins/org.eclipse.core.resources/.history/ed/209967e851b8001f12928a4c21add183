
public class Pattren5 {

	public static void main(String[] args) { 
		        for (int r = 1; r <= 4; r++) {
		            for (int c = 0; c < r; c++)
		            {
		            	 if ((r + c) % 2 == 0) {
		                     System.out.print("1");
		                     System.out.print(" ");
		                 } else {
		                     System.out.print("0");
		                     System.out.print(" ");
		                 }
		            }
		            System.out.println();
		        }
		    }


	}
